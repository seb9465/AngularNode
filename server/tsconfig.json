{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*":[ 
                "src/*"
            ]
        },
        "sourceRoot": "src",
        "outDir": "out"
    },
    "typeRoots": [
        "node_module/@types"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "out",
        "node_modules"
    ]
}